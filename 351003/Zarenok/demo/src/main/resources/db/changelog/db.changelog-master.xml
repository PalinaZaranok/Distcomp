<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.19.xsd">

    <changeSet id="1-create-tbl_author" author="palina">
        <createTable tableName="tbl_author" schemaName="distcomp">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="login" type="VARCHAR(64)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="firstname" type="VARCHAR(64)"/>
            <column name="lastname" type="VARCHAR(64)"/>
        </createTable>
    </changeSet>


    <changeSet id="2-create-tbl_issue" author="palina">
        <createTable tableName="tbl_issue" schemaName="distcomp">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="author_id" type="BIGINT">
                <constraints foreignKeyName="fk_issue_author"
                             references="distcomp.tbl_author(id)"
                             nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="content" type="TEXT"/>
            <column name="created" type="TIMESTAMP"/>
            <column name="modified" type="TIMESTAMP"/>
        </createTable>
    </changeSet>

    <changeSet id="3-create-tbl_mark" author="palina">
        <createTable tableName="tbl_mark" schemaName="distcomp">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(32)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>


    <changeSet id="4-create-tbl_message" author="palina">
        <createTable tableName="tbl_message" schemaName="distcomp">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="issue_id" type="BIGINT">
                <constraints foreignKeyName="fk_message_issue"
                             references="distcomp.tbl_issue(id)"
                             nullable="false"/>
            </column>
            <column name="content" type="TEXT"/>
        </createTable>
    </changeSet>

    <changeSet id="5-create-tbl_issue_mark" author="palina">
        <createTable tableName="tbl_issue_mark" schemaName="distcomp">
            <column name="issue_id" type="BIGINT">
                <constraints foreignKeyName="fk_issue_mark_issue"
                             references="distcomp.tbl_issue(id)"/>
            </column>
            <column name="mark_id" type="BIGINT">
                <constraints foreignKeyName="fk_issue_mark_mark"
                             references="distcomp.tbl_mark(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="6-init-data" author="palina">
        <insert tableName="tbl_author" schemaName="distcomp">
            <column name="login">palina.zaranok@gmail.com</column>
            <column name="firstname">Полина</column>
            <column name="lastname">Заренок</column>
            <column name="password">hashed_password</column>
        </insert>
    </changeSet>
</databaseChangeLog>